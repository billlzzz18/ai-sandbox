{
  "name": "ai-sandbox",
  "version": "1.0.0",
  "description": "Express-based runtime for the AI Agent Sandbox architecture.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "test": "node scripts/smoke-test.js",
    "lint": "npx eslint . --ext .js,.ts",
    "python-cli": "python3 cli/python/main.py",
    "php-cli": "php cli/php/main.php",
    "ruby-cli": "ruby cli/ruby/main.rb",
    "pnpm-install": "pnpm install",
    "pnpm-start": "pnpm start"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@genkit-ai/mcp": "^1.22.0",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0"
  }
}
